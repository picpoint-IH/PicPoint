<body class="colorBackground">

    <div class="container">
        <div class="row justify-content-center profile-box">
            {{#with user}}
            <div class="col-12">
                <img src="{{this.path}}" alt="">
                <h4>{{this.username}}</h4>
                <h4>About me</h4>
                <p>{{this.aboutMe}}</p>
                <a href="/auth/edit/{{this.id}}" class="btn smallButton">Edit</a>
            </div>
            {{/with}}
        </div>
        <div class="row  main-post justify-content-center">
            {{#each post}}
            <div class="col-3 ">
                <a href="/post/profile/{{this.id}}"><img class="polaroidEffect" src="{{this.picPath}}" alt=""></a>
            </div>
            {{/each}}
        </div>
        <div class="row justify-content-center">
            <figure id="map"></figure>
            <script src="https://unpkg.com/axios/dist/axios.min.js"></script>
            <script src="/javascripts/script.js"></script>
            <script
                src="https://maps.googleapis.com/maps/api/js?key=AIzaSyDG88rK2sVwRDbZIJautuIZpNt32kAQpSU&callback=initMap"></script>
        </div>
    </div>
</body>