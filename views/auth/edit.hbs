<head>
    <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T" crossorigin="anonymous">
    <link rel="stylesheet" href="/stylesheets/style.css" />
</head>

<body class="colorBackground">
    <div class="signup-form">
        <form action="/auth/edit/{{this.id}}" method="post" enctype="multipart/form-data">
            <h2>Register</h2>
            <div class="form-group">
                <div class="row">
                    <div class="col-xs-6"></div>
                    <div class="form-group">
                        <label for="username"></label>
                        <input type="text" name="username" class="form-control" value="{{this.username}}">
                    </div>
                </div>
                <div class="form-group">
                    <label for="email"></label>
                    <input type="text" name="email" class="form-control" value="{{this.email}}">
                </div>
                <div class="form-group">
                    <label for="password"></label>
                    <input type="password" name="password" class="form-control">
                    <br>

                    <label for='img'>Image</label>
                    <input name='imgFile' type='file' id='input1'>
                </div>

                <div class="form-group">
                    <button type="submit" class="btn botones btn-lg btn-block">Update</button>
                </div>
            </div>
        </form>
    </div>
</body>